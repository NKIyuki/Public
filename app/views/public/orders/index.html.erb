<div class = "container">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払い金額</th>
      <th scope="col">ステータス</th>
      <th scope="col">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th scope="row"><%= order.created_at.strftime("%Y/%m/%d") %></th>
      <td>
        <%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name%>
      </td>
      <td>
        <% order.order_details.each do |order_details| %>
        <%= order_details.item.name %>
        <% end %>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= Order.order_statuses_i18n[order.order_status] %></td>
      <td><%= link_to "表示する",order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>