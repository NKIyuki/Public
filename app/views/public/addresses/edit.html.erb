<div class = "container">
  <div class = "row">
    <div class = "col">
      <h3>配送先編集</h3>
    </div>
  </div>
<%= form_with model: @address,url: address_path(@address.id) do |f| %>
  <div class = "row">
    <div class ="col">
      <h5>郵便番号</h5>
    </div>
    <div class ="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <h5>住所</h5>
    </div>
    <div class = "col">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <h5>宛名</h5>
    </div>
    <div class = "col">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%= f.submit'変更内容を保存',class:"btn btn-success"%>
    </div>
  </div>
<% end %>
</div>