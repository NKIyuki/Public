<h4>ショッピングカート</h4>
<% total = 0 %>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete,class: "btn btn-danger btn-sm" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col">　　</th>
    </tr>
  </thead>
   <% if current_customer.cart_items.present? %>
    <% @cart_item.each do |cart_item| %>
  <tbody>
    <tr>
      <th scope="row"><%= cart_item.item.name %></th>
      <td><%= (cart_item.item.price*1.08).to_i %>円</td>
         <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
      <tb> <%= f.number_field :amount, min: 1, max:10, id: "quantity_cart"%>
           <%= f.submit "変更",class: "btn btn-success" %>
           <% end %>
      </tb>
      <tb>
        <%= (cart_item.item.price*1.08).to_i %>円
      </tb>
      <tb>
        <% subtotal = ((cart_item.item.price*cart_item.amount)*1.08).to_i %>
        <% subtotal %>
      </tb>
      <tb>
        <%= link_to "商品をカートから削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
      </tb>
    </tr>
    </tr>
  </tbody>
</table>

       <% total += subtotal %>
     <% end %>
<% end %>
   <tr>
    <th>合計金額</th>
    <td><%= total %>円</td>
   </tr>

  <P>
    <%= link_to "買い物を続ける",items_path,class:"btn btn-danger" %>
  </P>

  <p>
    <%= link_to "情報入力に進む",new_order_path %>
  </p>