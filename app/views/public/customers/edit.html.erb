<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <h1>会員情報編集</h1>
    </div>
  </div>
     <%= form_with model: @custome,url: customer_path(@custome.id) do |f| %>
  <div class = "row">
    <div class = "col-1">
      氏名
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :first_name %>
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-1">
      フリガナ
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :first_name_kana %>
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :last_name_kana %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-1">
      郵便番号
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-1">
      住所
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-1">
      電話番号
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-1">
      メールアドレス
    </div>
    <div class = "col-2 offset-1">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class ="row">
    <div class = "col-2 offset-1">
      <%= f.submit '編集内容を保存する',class:"btn btn-success" %>
    </div>
    <div class = "col-2 offset-1">
      <%= link_to "退会する", customers_confirm_path,class:"btn btn-danger" %>
    </div>
  </div>
</div>
<% end %>



