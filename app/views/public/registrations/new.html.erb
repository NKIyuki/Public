<div class = "container" >
  <div class = "row">
    <div class = "col-5 offset-3" >
      <h1>新規会員登録</h1>
    </div>
  </div>
  <div clss = "row">
    <div class = "col-11 offset-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <p class="field">
    <%= f.label :first_name,"名前" %>
    （姓）<%= f.text_field :first_name, autofocus: true %>
    （名）<%= f.text_field :last_name, autofocus: true %>
     </p>

    <p class="field">
    <%= f.label :first_name_kana,"フリガナ" %>
    （セイ）    <%= f.text_field :first_name_kana, autofocus: true %>
    （メイ）    <%= f.text_field :last_name_kana, autofocus: true %>
    </p>

    <p class="field">
    <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true %>
    </p>

    <p class="field">
    <%= f.label :address,"住所" %>
    <%= f.text_field :address, autofocus: true %>
    </p>

    <p class="field">
    <%= f.label :telephone_number,"電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true %>
    </p>

    <p class="field">
    <%= f.label :email,"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </p>

    <p class="field">
    <%= f.label :password,"パスワード（6文字以上）" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </p>

    <p class="field">
    <%= f.label :password_confirmation,"パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </p>
    <div class = "row">
      <div class = "col-5 offset-3">
          <button>
            <%= f.submit "新規登録" %>
          </button>
        </p>
      </div>
    </div>
    <% end %>
    </div>
  </div>
  <div class = "row" >
    <div class = "col-4 offset-2">
      <h3>既に登録済みの方</h3>
      <h6><%= link_to "こちら",new_customer_session_path %>からログインください。</h6>
    </div>
  </div>
</div>

