<div class = "container" >
  <div class = "row">
    <div class = "col-5 offset-3" >
      <h1>新規会員登録</h1>
    </div>
  </div>
  <div clss = "row">
    <div class = "col-11 offset-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <div class="row">
      <p class = "col-3">
        <%= f.label :first_name,"名前" %>（姓）
      </p>
      <p class = "col-3">
        <%= f.text_field :first_name, autofocus: true %>
      </p>
      <p class = "col-2">
        （名）
      </p>
      <p class = "col-3">
        <%= f.text_field :last_name, autofocus: true %>
      </p>
    </div>
     <div class="row">
      <p class = "col-3">
        <%= f.label :first_name_kana,"フリガナ" %>（セイ）
      </p>
      <p class = "col-3">
        <%= f.text_field :first_name_kana, autofocus: true %>
      </p>
      <p class = "col-2">
        （メイ）
      </p>
      <p class = "col-3">
        <%= f.text_field :last_name_kana, autofocus: true %>
      </p>
    </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
      </p>
      <p class = "col-3">
        <%= f.text_field :postal_code, autofocus: true %>
      </p>
    </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :address,"住所" %>
      </p>
      <p class = "col-3">
        <%= f.text_field :address, autofocus: true %>
      </p>
    </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :telephone_number,"電話番号（ハイフンなし）" %>
      </p>
      <p class = "col-3">
        <%= f.text_field :telephone_number, autofocus: true %>
      </p>
    </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :email,"メールアドレス" %>
      </p>
      <p class = "col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </p>
    </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :password,"パスワード（6文字以上）" %>
      </p>
      <p class = "col-3">
        <% if @minimum_password_length %>
        <em><% @minimum_password_length %></em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        </p>
      </div>
    <div class="row">
      <p class = "col-3">
        <%= f.label :password_confirmation,"パスワード（確認用）" %>
      </p>
      <p class = "col-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </p>
    </div>
    <div class = "row">
      <div class = "col-5 offset-3">
          <button>
            <%= f.submit "新規登録" %>
          </button>
        </p>
      </div>
    </div>
    <% end %>
    </div>
  </div>
  <div class = "row" >
    <div class = "col-5 offset-2">
      <h3>既に登録済みの方</h3>
      <h6><%= link_to "こちら",new_customer_session_path %>からログインください。</h6>
    </div>
  </div>
</div>

