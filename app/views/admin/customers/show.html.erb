<div class = "container">
 <div class = "row">
  <div class = "col">
   <h3>会員詳細</h3>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>会員ID</h4>
  </div>
  <div class = "col">
   <%= @customers.id %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>氏名</h4>
  </div>
  <div class = "col">
   <%= @customers.first_name %> <%= @customers.last_name %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>フリガナ</h4>
  </div>
  <div class = "col">
   <%= @customers.first_name_kana %> <%= @customers.last_name_kana %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>郵便番号</h4>
  </div>
  <div class = "col">
   <%= @customers.postal_code %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>住所</h4>
  </div>
  <div class = "col">
   <%= @customers.address %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>電話番号</h4>
  </div>
  <div class = "col">
   <%= @customers.telephone_number %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>メールアドレス</h4>
  </div>
  <div class = "col">
   <%= @customers.email %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>会員ステータス</h4>
  </div>
  <div class = "col">
    <% if @customers.is_deleted %>
    <span>無効</span>
    <% else %>
    <span>有効</span>
    <% end %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <%=link_to '編集する', edit_admin_customer_path %>
  </div>
  <div class = "col">
   <%= link_to'注文履歴一覧を見る',admin_path %>
  </div>
 </div>
</div>






