<h1>商品編集</h1>
<%= form_with model: @item,url: admin_item_path(@item.id) do |f| %>
<h1>商品画像</h1>
<%= f.file_field :image,placeholder:"プロフィール画像",accept:"image/*" %>
<h1>商品名</h1>
<%= f.text_field :name %>
<h1>商品説明</h1>
<%= f.text_field :introduction %>
<h1>ジャンル</h1>
<%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>
<h1>税抜価格</h1>
<%= f.text_field :price %>円
 <h1>販売ステータス</h1>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売停止中" %>
  <%= f.radio_button :is_active, :false %>

  <%= f.submit '変更を保存する',class:"btn btn-success" %>

  <% end %>