<div class = "container">
 <div class = "row">
  <div class = "col">
   <h3>商品編集</h3>
  </div>
 </div>
<%= form_with model: @item,url: admin_item_path(@item.id) do |f| %>
 <div class = "row">
  <div class = "col">
    <h4>商品画像</h4>
  </div>
  <div class = "col">
   <%= f.file_field :image,placeholder:"プロフィール画像",accept:"image/*" %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>商品名</h4>
  </div>
  <div class = "col">
   <%= f.text_field :name %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>商品説明</h4>
  </div>
  <div class = "col">
   <%= f.text_field :introduction %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>ジャンル</h4>
  </div>
  <div class = "col">
   <%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>
  </div>
 </div>
 <div class = "row">
  <div class = "col">
   <h4>税抜価格</h4>
  </div>
  <div class = "col">
   <%= f.text_field :price %>円
  </div>
 </div>
 <div class = "row">
  <div class = "col">
    <h3>販売ステータス</h3>
  </div>
  <div class = "col">
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売停止中" %>
    <%= f.radio_button :is_active, :false %>
  </div>
 </div>
 <div class = "row">
  <div class = "col-3 offset-4">
    <%= f.submit '変更を保存する',class:"btn btn-success" %>
  </div>
 </div>
 <% end %>
</div>



