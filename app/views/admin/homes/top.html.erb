<div class = "container">
  <div class "row">
    <div class = "col">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <tr>
      <th scope="row">
        <%= link_to admin_order_path(order.id) do %>
           <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S")%>
        <% end %></th>
      <td><%= order.name%></td>
      <% total=0 %>
      <% order.order_details.each do |order_detail| %>
      <% total+= order_detail.amount %>
      <% end %>
      <td><%= total %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>
