<div class = "container">
  <div class = "row">
    <div class = "col">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
  <%= form_with model:Genre.new,url: admin_genres_path  do |f| %>
  <div class = "row">
    <div class = "col">
     <h4>ジャンル</h4>
    </div>
    <div class = "col">
      <%= f.text_field :name %>
    </div>
    <div class = "col">
      <%= f.submit '新規登録',class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  <table class="table">
  <thead>
    <tr>
      <th scope="col-1" >ジャンル</th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <th scope="row"><%= genre.name %></th>
      <td><%= link_to "編集",edit_admin_genre_path(genre.id) %></td>
    </tr>
  </tbody>
  <% end %>
  <%= paginate @genres %>
</table>
</div>