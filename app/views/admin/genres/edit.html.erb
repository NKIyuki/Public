<div class = "container">
 <div class = "row">
  <div class = "col">
   <h3>ジャンル編集</h3>
  </div>
 </div>
 <%= form_with model: @genre,url: admin_genre_path(@genre.id),method: :patch  do |f| %>
 <div class = "row">
  <div class = "col">
   <h5>ジャンル名</h5>
  </div>
  <div class = "col">
   <%= f.text_field :name %>
  </div>
  <div class = "col">
   <%= f.submit '変更を保存',class:"btn btn-success" %>
  </div>
 </div>
 <% end %>
</div>








